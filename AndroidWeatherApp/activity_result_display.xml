<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.hw9.ResultDisplay"
    android:orientation="vertical">

    <ScrollView>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
               >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                <Button
                    android:id="@+id/MoreDetailsbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Details"
                    android:textSize="15sp"
                    />


                <Button
                    android:id="@+id/buttonMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Map"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp" />
                 <Button
                     android:id="@+id/fbbutton"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:background="@drawable/fb_icon"
                     android:layout_marginLeft="20dp"
                     />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:layout_column="0"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="5dp"
                    android:layout_span="6" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:id="@+id/textViewSummary"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="20sp"
                    android:paddingTop="23dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:id="@+id/textViewTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30pt"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/textViewTempUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp" />
                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewHighLow"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:paddingBottom="15dp" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewPrecip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Precipitation"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/textViewPrecipitation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="15sp"
                    />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewRain"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Chance Of Rain"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/textViewChanceOfRain"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="right"
                    />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewWind"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Wind Speed"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/textViewWindSpeed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="right" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewDew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Dew Point"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/textViewDewPoint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="right" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewHumid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Humidity"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/textViewHumidity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:gravity="right" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewVisib"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Visibility"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/textViewVisibility"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="right" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewSRise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Sunrise"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textViewSunRise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="right"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewSSet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Sunset"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/textViewSunSet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:gravity="right" />
            </TableRow>


        </TableLayout>

    </ScrollView>


</TableLayout>
