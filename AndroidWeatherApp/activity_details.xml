<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <TextView
            android:id="@+id/textViewDetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="More details for Los Angeles, CA"
            android:padding="15dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
            <Button
                android:id="@+id/Next24Hours"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT 24 HOURS"
                android:textSize="20sp"
                android:background="@color/colorBlueFade"
                android:onClick="onButtonAgainClicked"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/Next7Days"
                style="@style/ButtonStyle"
                android:background="@color/colorGrey"
                android:onClick="onButtonClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT 7 DAYS"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"/>

            </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/frameLayoutFragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

            </FrameLayout>
        </ScrollView>

</LinearLayout>

